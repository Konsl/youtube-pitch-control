{
    "name": "__MSG_name__",
    "description": "__MSG_description__",
    "default_locale": "en",
    "version": "1.0.1.0",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "*://*.youtube.com/*",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "exclude_matches": [
                "*://*.music.youtube.com/*"
            ],
            "run_at": "document_idle",
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{78aa0728-f99f-45f4-beec-35b6da50d03a}",
            "strict_min_version": "57.0"
        }
    }
}